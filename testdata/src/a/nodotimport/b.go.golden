package nodotimport

import (
	g1 "github.com/onsi/ginkgo/v2"
	g2 "github.com/onsi/gomega"
)

var _ = g1.Describe("no dot import", func() {
	g1.It("should ignore length warning", func() {
		const length = 3
		g2.Expect("abc").Should(g2.HaveLen(3))               // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.Should\(g2\.HaveLen\(3\)\). instead`
		g2.Expect("abc").Should(g2.HaveLen(length))          // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.Should\(g2\.HaveLen\(length\)\). instead`
		g2.Expect("").Should(g2.BeEmpty())                   // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\(""\)\.Should\(g2\.BeEmpty\(\)\). instead`
		g2.Expect("abc").ShouldNot(g2.BeEmpty())             // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.ShouldNot\(g2\.BeEmpty\(\)\). instead`
		g2.Expect("abc").ShouldNot(g2.BeEmpty())             // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.ShouldNot\(g2\.BeEmpty\(\)\). instead`
		g2.Expect("abc").Should(g2.HaveLen(3))               // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.Should\(g2\.HaveLen\(3\)\). instead`
		g2.Expect("abc").WithOffset(1).Should(g2.HaveLen(3)) // want `ginkgo-linter: wrong length assertion\. Consider using .g2\.Expect\("abc"\)\.WithOffset\(1\)\.Should\(g2\.HaveLen\(3\)\). instead`
	})
	g1.It("should trigger nil warning", func() {
		var x *int
		g2.Expect(x).Should(g2.BeNil()) // want `ginkgo-linter: wrong nil assertion\. Consider using .g2\.Expect\(x\)\.Should\(g2\.BeNil\(\)\). instead`
		g2.Expect(x).Should(g2.BeNil()) // want `ginkgo-linter: wrong nil assertion\. Consider using .g2\.Expect\(x\)\.Should\(g2\.BeNil\(\)\). instead`
		g2.Expect(x).Should(g2.BeNil()) // want `ginkgo-linter: wrong nil assertion\. Consider using .g2\.Expect\(x\)\.Should\(g2\.BeNil\(\)\). instead`
		g2.Expect(x).Should(g2.BeNil()) // want `ginkgo-linter: wrong nil assertion\. Consider using .g2\.Expect\(x\)\.Should\(g2\.BeNil\(\)\). instead`
		g2.Expect(x).Should(g2.BeNil()) // want `ginkgo-linter: wrong nil assertion\. Consider using .g2\.Expect\(x\)\.Should\(g2\.BeNil\(\)\). instead`
	})
})
